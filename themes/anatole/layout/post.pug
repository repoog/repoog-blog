extends partial/layout

include mixins

block site_title
    != page.title + " Â· " + config.title

block description
    - var desc = page.desc || strip_html(page.content).replace(/^\s*/, '').replace(/\s*$/, '').substring(0, 150);
    meta(name="description", content=desc)

block content
  .autopagerize_page_element: .content: .post-page
    include mixins
    - var awl = theme.meta.wordcount.awl
    - var wpm = theme.meta.wordcount.wpm
    +make_post(page, true, theme.meta.wordcount.enable, awl, wpm)

    - var prev = page.prev ? page.prev.path : false;
    - var next = page.next ? page.next.path : false;
    if prev || next
      .pagination
        ul.clearfix
          if prev
            li.pre.pagbuttons
              a.btn(role="navigation", href=url_for(prev), title=page.prev.title)!= __('common.prev_post')
          if next
            li.next.pagbuttons
              a.btn(role="navigation", href=url_for(next), title=page.next.title)!= __('common.next_post')
    if page.comments
        include partial/comments