extends partial/layout

block site_title
    != page.title + " Â· " + config.title

block description
    - var desc = page.desc || strip_html(page.content).replace(/^\s*/, '').replace(/\s*$/, '').substring(0, 150);
    meta(name="description", content=desc)

block content
  .autopagerize_page_element: .content: .post-page
    include mixins
    - var awl = theme.meta.wordcount.awl
    - var wpm = theme.meta.wordcount.wpm
    +make_post(page, true, theme.meta.wordcount.enable, awl, wpm)
    if page.comments
        include partial/comments
